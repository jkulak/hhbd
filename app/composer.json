{
    "name": "hhbd/website",
    "description": "Polish Hip-Hop Database",
    "type": "project",
    "require": {
        "php": "^7.4",
        "shardj/zf1-future": "^1.24"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.92",
        "mockery/mockery": "^1.6",
        "phploc/phploc": "^7.0",
        "phpmetrics/phpmetrics": "^2.9",
        "phpunit/phpunit": "^9.6",
        "rector/rector": "^2.3"
    },
    "autoload": {
        "psr-0": {
            "Jkl_": "library/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "@setup-hooks"
        ],
        "post-update-cmd": [
            "@setup-hooks"
        ],
        "setup-hooks": "@php tools/setup-hooks.php"
    }
}
