# HHBD Environment Configuration
# Copy this file to .env and fill in the values

# Environment
APPLICATION_ENV=development

# Database
DB_HOST=db
DB_NAME=hhbd
DB_USER=hhbd
DB_PASSWORD=hhbd_password

# Cache (Memcached)
CACHE_ENABLED=true
CACHE_HOST=memcached
CACHE_PORT=11211

# Mail (SMTP)
MAIL_HOST=smtp.example.com
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_EMAIL=noreply@hhbd.pl
MAIL_FROM_NAME=Hhbd

# Feature Flags
SHOW_ADS=true
SHOW_SHARE_IT=true
DEBUG_FIREPHP=false
