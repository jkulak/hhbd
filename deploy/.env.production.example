# HHBD Production Environment Configuration
# Copy this file to .env.production and update with real values
# DO NOT commit .env.production to version control

# Environment
APPLICATION_ENV=production

# Database
DB_HOST=db
DB_NAME=hhbd
DB_USER=hhbd
DB_PASSWORD=hhbd_password
DB_ROOT_PASSWORD=root_password

# Cache (Memcached)
CACHE_ENABLED=true
CACHE_HOST=memcached
CACHE_PORT=11211

# Mail (SMTP) - Configure for production
MAIL_HOST=smtp.example.com
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_EMAIL=noreply@hhbd.pl
MAIL_FROM_NAME=HHBD

# Feature Flags
SHOW_ADS=true
SHOW_SHARE_IT=true
DEBUG_FIREPHP=false
